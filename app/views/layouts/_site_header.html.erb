
<!-- header -->
<div class="header" id="home">
  <div class="container">
    <ul>

      <% if user_signed_in? %>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
      <li><%= link_to "Sign In", new_user_session_path, remote: true %><i class="fa fa-unlock-alt" aria-hidden="true"></i></li>
      <li><%= link_to "Sign Up", new_user_registration_path, remote: true  %><i class="fa fa-pencil-square-o" aria-hidden="true"></i></li>

      <% end %>

      <li><i class="fa fa-envelope-o" aria-hidden="true"></i> <a href="mailto:fabwear10@gmail.com">fabwear10@gmail.com</a></li>
      <li><i  class="fa fa-phone" aria-hidden="true"></i> <a href="#">0123456789</a></li>

      <% if current_user.try(:admin?) %>
      <li><%= link_to 'Hello..!! Admin', home_admin_page_path %></li>

      <%elsif user_signed_in?%>
      <li><%="Signed in as: #{current_user.email}" %></li>

      <%end%>
    </ul>

  </div>
</div>
